pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '25'))
        disableConcurrentBuilds()
        timestamps()
        skipDefaultCheckout()
    }

    stages {
        
        stage('get code') {
            steps {
                git 'git@github.com:fuyoushengwu/weapp_sender.git'
            }
        }

        stage('code analysis') {
            steps {
                sh 'chmod +x gradlew'
                sh './gradlew sonarqube  --stacktrace -Dsonar.projectKey=weapp_sender -Dsonar.organization=fuyoushengwu-github -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=1a1a48e2f6cd3453ae98de53fc46ef27b53732f7'
            }
        }
    }

}